<h1>New Story</h1>
<%= form_for :story, url: stories_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :author_name %><br>
      <%= f.text_field :author_name %>
    </p>

    <p>
      <%= f.label :author_location %><br>
      <%= f.text_field :author_location %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>